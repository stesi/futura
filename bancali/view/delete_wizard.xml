<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="delete_wizard_view_form" model="ir.ui.view">
        <field name="name">delete wizard form</field>
        <field name="model">delete.wizard</field>
        <field name="arch" type="xml">
            <form string="Test">
                <group class="oe_title">
                    <field name="password"/>
                </group>
                <footer>
                    <button name="confirm_delete" string="Delete Record" class="oe_highlight" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/> 
                </footer>
            </form>
        </field>     
    </record>
        
    <record id="delete_wizard_action" model="ir.actions.act_window">
        <field name="name">Delete Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">delete.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="delete_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>