<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="fleet_vehicle_log_services_form_inherit_2" model="ir.ui.view">
        <field name="name">Modulo di Rifornimenti Flotta</field>
        <field name="model">fleet.vehicle.log.services</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_log_services_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='start_date']" position="before">
                <field name="groups_ids"/>
                <field name="is_rop"/>
            </xpath>
            <xpath expr="//field[@name='start_date']" position="attributes">
                <attribute name="attrs">{'invisible': [('is_rop', '=', True)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
