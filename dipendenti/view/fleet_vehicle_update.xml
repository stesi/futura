<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_fleet_vehicle_form" model="ir.ui.view">
            <field name="name">fleet.vehicle.update</field>
            <field name="model">fleet.vehicle</field>
            <field name="inherit_id" ref="fleet.vehicle" />
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']//h2" position="after">
                    <label for="state_vehicle">
                    </label>
                    <h2>
                        <field name="state_vehicle" class="oe_inline"/>
                    </h2>
                </xpath>
            </field>
        </record>


</odoo>